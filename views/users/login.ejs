<% layout('/layouts/boilerplate') %>

    <div class="row">
        <h1 class="col-6 offset-3 mt-3"><b>Log<span style="color: #fe424d;">In</span></b></h1>
        <div class="col col-6 offset-3 mt-3">
            <form action="/login" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">username</label>
                    <input type="text" id="username" class="form-control" name="username" placeholder="Enter username"
                        required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="password" class="form-control" name="password" placeholder="Enter password"
                        required>
                </div>
                <button class="mb-3 btn btn-dark new-btn">LogIn</button>
            </form>
        </div>
    </div>