<% layout('/layouts/boilerplate') %>

    <div class="row">
        <div class="col col-6 offset-2 mt-5 mb-4 show-heading">
            <h3>Listings Details</h3>
        </div>
        <div class="card col-6 offset-2">
            <img src="<%= listing.image.url%>" class="card-img-top show-img mb-2" alt="Listing-img">
            <div class="card-body">
                <p class="card-text">
                    <b>
                        <%= listing.title%>
                    </b> <br>
                    <%= listing.description%> <br>
                        &#8377; <%= listing.price.toLocaleString('en-IN')%> <br>
                            <%= listing.location%> <br>
                                <%= listing.country%>
                </p>
            </div>
        </div>

        <div class="btns">
            <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-2 offset-2 edit-btn">Edit</a>

            <form action="/listings/<%=listing._id%>?_method=DELETE" method="post">
                <button class="btn btn-dark offset-2 delete-btn">Delete </button>
            </form>
        </div>
    </div>