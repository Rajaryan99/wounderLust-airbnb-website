<% layout('/layouts/boilerplate') %>
    <div class="row">
        <div class="col col-8 offset-2">

            <body>
                <br><br>
                <div class="new-div">
                    <h3>Creating New List</h3>
                </div>
                <br><br>
                <form method="post" action="/listings" novalidate class="needs-validation"
                    enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" name="listing[title]" placeholder="Enter Title"
                            required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea type="text" class="form-control" name="listing[description]" rows="3" cols="40"
                            placeholder="enter description" required></textarea>
                        <div class="invalid-feedback">please write a short Description</div>
                    </div>
                    <!-- <div class="mb-3">
                        <label for="image" class="form-label">Image Link</label>
                        <input type="text" class="form-control" name="listing[image]" placeholder="enter img URL/link">
                    </div> -->
                    <div class="mb-3">
                        <label for="image" class="form-label">Uplode Image</label>
                        <input type="file" class="form-control" name="listing[image]">
                        required
                    </div>

                    <div class="mb-3">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" class="form-control" required name="listing[price]"
                            placeholder="enter price">
                        <div id="validationServerUsernameFeedback" class="invalid-feedback">Please enter a valid Price
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" class="form-control" name="listing[location]" placeholder="enter location"
                            required>
                        <div id="validationServerUsernameFeedback" class="invalid-feedback">Please provide a valid city.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" class="form-control" name="listing[country]" placeholder="enter country"
                            required>
                        <div id="validationServerUsernameFeedback" class="invalid-feedback">Please provide a valid
                            country.
                        </div>
                    </div>
                    <button class="mb-3 btn btn-dark new-btn">ADD</button>
                </form>
            </body>
        </div>
    </div>